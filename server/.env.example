# MongoDB
MONGO_URI=mongodb://127.0.0.1:27017/circlo_social

# Clerk Authentication
# Get your public key from Clerk Dashboard -> API Keys -> Show JWT public key
CLERK_JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
YOUR_CLERK_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----"

# Server Configuration
PORT=3000
NODE_ENV=development

# Client Origin (for CORS) - comma separated for multiple origins
CLIENT_ORIGIN=http://localhost:5173

# Development Mode (skip auth verification for testing)
SKIP_AUTH=true