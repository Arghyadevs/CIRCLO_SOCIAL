# Docker Compose Environment Variables
# Copy this file to .env.docker and fill in your values
# Use with: docker-compose --env-file .env.docker up

# ============================================
# Clerk Authentication (REQUIRED)
# ============================================
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
YOUR_CLERK_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----

# ============================================
# Firebase Configuration (Optional)
# ============================================
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_DATABASE_URL=

# ============================================
# API Configuration
# ============================================
# For Docker setup, backend runs on port 4000 inside the network
VITE_API_URL=http://localhost:4000/api

# CORS - Frontend URL (for backend to allow)
CLIENT_ORIGIN=http://localhost:3000

# ============================================
# Optional Settings
# ============================================
VITE_APP_URL=http://localhost:3000
SKIP_AUTH=false
